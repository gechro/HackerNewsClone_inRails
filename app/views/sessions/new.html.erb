
<% if flash[:errors] %>
  <br><div class="errors">
    <%= flash[:errors] %>
  </div><br>
<% end %>

<h4>Login</h4>

  <%= form_for :session do |f| %>
    <%= f.label "username:" %>
    <%= f.text_field :username %><br><br>
    <%= f.label "password :" %>
    <%= f.password_field :password %><br><br>
    <%= f.submit "login" %><br>
  <% end %>

<h4>Create Account</h4>

 <%= form_for @user do |f| %>
    <%= f.label "username:" %>
    <%= f.text_field :username %><br><br>
    <%= f.label "password :" %>
    <%= f.password_field :password %><br><br>
    <%= f.submit "signup" %><br>
  <% end %>
